{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    // Excepción para permitir el uso de _id
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],

    // Excepción para permitir console.log
    "no-console": "off",

    // Configuración para saltos de línea
    "linebreak-style": ["error", "unix"] // Cambia a "windows" si es necesario
  }
}
